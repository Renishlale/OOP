 #include <iostream>
 using namespace std;

 

class num
{
    private:
    int n1,n2;
    public:
    int input1()
    {
      cout<<"\n Enter the any number:";
      cin>>n1;
      cout<<"\n Enter the any number:";
      cin>>n2;
      cout<<" \n Number 1:"<<n1;
      cout<<" \n Number 2:"<<n2;
      cout<<"\n";
      return 0;
    } 
     friend int swp(num);
};

 int swp(num m)
 {
     int temp;
     temp=m.n1;
     m.n1=m.n2;
     m.n2=temp;
     cout<<"\n After swapping:";
     cout<<"\n Number 1:"<<m.n1;
     cout<<"\n Number 2:"<<m.n2;
     
     return(0);  
 }
 int main()
 
 {
     num s1;
     s1.input1();
    swp(s1);
    return 0;
 }
 
 
 
 
 
