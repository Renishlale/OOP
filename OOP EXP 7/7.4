  
#include <iostream>
using namespace std;

class Number {
public:
    int num;

    Number(int n = 0) { num = n; }

    // Pre-increment: ++n
    void operator++() { 
        num = num + 1; 
    }

    // Post-increment: n++
    void operator++(int) {  // simplest version, returns nothing
        num = num + 1; 
    }

    void display() { 
        cout << num; 
    }
};

int main() {
    Number n(5);

    cout << "Original: "; n.display();

    ++n;
    cout << "\nPre-increment: "; n.display();

    n++;
    cout << "\nPost-increment: "; n.display();

    return 0;
}
