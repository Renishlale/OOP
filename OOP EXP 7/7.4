    #include <iostream>
   using namespace std;

class Number {
public:
    int num;

    Number(int n = 0) { num = n; }

    void operator++() { 
        num = num + 1; 
    }

    Number operator++(int) {
        Number temp(num);
        num = num + 1;
        return temp;
    }

    void display() { 
        cout << "Value: " << num ; 
    }
};

int main() {
    int x = 5;
    Number n(x);

    cout << "Original value: ";
    n.display();

    ++n;
    cout << "After pre-increment: ";
    n.display();

    n++;
    cout << "After post-increment: ";
    n.display();

    return 0;
}
