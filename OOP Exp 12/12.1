#include <iostream>
#include <stack>
using namespace std;

int main() {
    stack<int> s;
    int choice, value;

    do {
        cout << "\n1. Push\n2. Pop\n3. Display Top\n4. Exit\nEnter choice: ";
        cin >> choice;
        switch(choice) {
            case 1:
                cout << "Enter value to push: ";
                cin >> value;
                s.push(value);
                break;
            case 2:
                if(!s.empty()) {
                    cout << "Popped: " << s.top() << endl;
                    s.pop();
                } else cout << "Stack is empty!\n";
                break;
            case 3:
                if(!s.empty()) cout << "Top element: " << s.top() << endl;
                else cout << "Stack is empty!\n";
                break;
        }
    } while(choice != 4);
    return 0;
}
