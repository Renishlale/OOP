  
#include <iostream>
#include<string>
using namespace std;

class student
{
    public:
    string name;
    int per;
    
    public:
    student(string stu_name,int pere)
    {
         name=stu_name;
         per=pere;
    }
   
    
    int output()
    {
        cout<<"\n Name:"<<name;
        cout<<"\n Percentage:"<<per;
        cout<<"%";
        return 0;
    }
};





int main() 
{
    string  stu_name;
    int pere;
   cout<<"Enter student name:";
   cin>>stu_name;
   cout<<"Enter student Percentage:";
   cin>>pere;
    student s1(stu_name,pere);
    
    cout<<"\n Student info:";
     
    s1.output();
     
     return 0;
}
